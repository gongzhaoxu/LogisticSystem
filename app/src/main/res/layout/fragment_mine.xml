<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.MineFragment">
<!--    ignore-->
    <FrameLayout
        android:id="@+id/ignore"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_light_my"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/avatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:freezesText="true"
                android:layout_centerInParent="true"
                android:background="@drawable/avatar" />
            <TextView
                android:id="@+id/userLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avatar"
                android:freezesText="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="登陆学号"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"

                >

                <TextView
                    android:layout_width="@dimen/mine_info_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mine_info_text_paddingLeft"
                    android:text="专业班级："
                    android:textColor="@color/black"
                    android:textSize="@dimen/mine_info_textsize" />

                <TextView
                    android:id="@+id/userDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:freezesText="true"

                    android:text="计算机1904班"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mine_info_textsize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"

                >

                <TextView
                    android:layout_width="@dimen/mine_info_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mine_info_text_paddingLeft"
                    android:text="姓名："
                    android:textColor="@color/black"
                    android:textSize="@dimen/mine_info_textsize" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:freezesText="true"
                    android:text="巩钊旭"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mine_info_textsize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"

                >

                <TextView
                    android:layout_width="@dimen/mine_info_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mine_info_text_paddingLeft"

                    android:text="手机号："
                    android:textColor="@color/black"
                    android:textSize="@dimen/mine_info_textsize" />

                <TextView
                    android:id="@+id/userTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:freezesText="true"
                    android:text="13993449346"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mine_info_textsize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f0f0f0"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/completeInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"

                >

                <TextView
                    android:layout_width="@dimen/mine_info_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mine_info_text_paddingLeft"

                    android:text="完善信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mine_info_textsize" />

                <com.google.android.material.button.MaterialButton

                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_right_arrow"
                    app:iconGravity="end"
                    app:iconTint="#979797" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f0f0f0"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/aboutAuthor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="@dimen/mine_info_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mine_info_text_paddingLeft"

                    android:text="关于作者"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mine_info_textsize" />

                <com.google.android.material.button.MaterialButton

                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_right_arrow"
                    app:iconGravity="end"
                    app:iconTint="#979797" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>